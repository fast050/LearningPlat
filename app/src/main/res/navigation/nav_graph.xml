<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/coursesListFragment">
    <fragment
        android:id="@+id/courseDetailFragment"
        android:name="com.example.learningplat.ui.coursedetail.CourseDetailFragment"
        android:label="{courseName}"
        tools:layout="@layout/fragment_course_detail">

        <argument
            android:name="courseName"
            app:argType="string" />

    </fragment>
    <fragment
        android:id="@+id/coursesListFragment"
        android:name="com.example.learningplat.ui.courseslist.CoursesListFragment"
        android:label="Courses"
        tools:layout="@layout/fragment_courses_list">
        <action
            android:id="@+id/action_coursesListFragment_to_courseDetailFragment"
            app:destination="@id/courseDetailFragment" />

    </fragment>
    <fragment
        android:id="@+id/courseInfoFragment2"
        android:name="com.example.learningplat.ui.coursedetail.info.CourseInfoFragment"
        android:label="fragment_course_info"
        tools:layout="@layout/fragment_course_info" />


</navigation>